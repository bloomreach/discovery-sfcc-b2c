<?xml version="1.0" encoding="UTF-8"?>
<metadata xmlns="http://www.demandware.com/xml/impex/metadata/2006-10-31">
    <type-extension type-id="SitePreferences">
        <custom-attribute-definitions>
            <attribute-definition attribute-id="blr_AccountID">
                <display-name xml:lang="x-default">Bloomreach Account ID</display-name>
                <description xml:lang="x-default">Account ID</description>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
            <attribute-definition attribute-id="blr_AuthKey">
                <display-name xml:lang="x-default">Bloomreach Authentication Key</display-name>
                <description xml:lang="x-default">Authentication Key</description>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
            <attribute-definition attribute-id="blr_DomainKey">
                <display-name xml:lang="x-default">Bloomreach Domain Key</display-name>
                <description xml:lang="x-default">Domain Key</description>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
            <attribute-definition attribute-id="blr_ContentDomainKey">
                <display-name xml:lang="x-default">Bloomreach Content Domain Key</display-name>
                <description xml:lang="x-default">Content Domain Key</description>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
            <attribute-definition attribute-id="blr_ApiKey">
                <display-name xml:lang="x-default">Bloomreach API Key</display-name>
                <description xml:lang="x-default">API Key</description>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
            <attribute-definition attribute-id="blr_ProductFields">
                <display-name xml:lang="x-default">Bloomreach Product Fields configuration</display-name>
                <type>text</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
            </attribute-definition>
			<attribute-definition attribute-id="blr_AdvancedContentExportFields">
			    <display-name xml:lang="x-default">Bloomreach Content Fields configuration</display-name>
                <type>text</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
            </attribute-definition>
            <attribute-definition attribute-id="blr_SearchEnabled">
                <display-name xml:lang="x-default">Bloomreach Search Enabled</display-name>
                <type>boolean</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <default-value>true</default-value>
            </attribute-definition>
            <attribute-definition attribute-id="blr_SearchResponseFields">
                <display-name xml:lang="x-default">Search Response Fields</display-name>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
                <default-value>pid,title,price,description,url,brand,thumb_image</default-value>
            </attribute-definition>
            <attribute-definition attribute-id="blr_returnProductIDsOnly">
                <display-name xml:lang="x-default">Return Product IDs Only</display-name>
                <type>boolean</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <default-value>false</default-value>
            </attribute-definition>
            <attribute-definition attribute-id="blr_MiltiLocaleEnabled">
                <display-name xml:lang="x-default">Create multi locale feed</display-name>
                <type>boolean</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <default-value>false</default-value>
            </attribute-definition>
            <attribute-definition attribute-id="blr_MiltiCurrency">
                <display-name xml:lang="x-default">Create multi currency feed</display-name>
                <description xml:lang="x-default">Create multi currency feed</description>
                <type>enum-of-string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <value-definitions>
                    <value-definition>
                        <display xml:lang="x-default">Sinlge currency</display>
                        <value>disable</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">Price as attribute</display>
                        <value>priceAsAttr</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">Price as View</display>
                        <value>priceAsView</value>
                    </value-definition>
                </value-definitions>
            </attribute-definition>
			<attribute-definition attribute-id="blr_enableRelevanceBySegment">
                <display-name xml:lang="x-default">Use relevance by segment?</display-name>
                <type>boolean</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
            </attribute-definition>
            <attribute-definition attribute-id="blr_relevanceBySegmentType">
                <display-name xml:lang="x-default">Segment type</display-name>
                <type>enum-of-string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <value-definitions>
                    <value-definition>
                        <display xml:lang="x-default">Tier that the user belongs to.</display>
                        <value>customer_tier</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">Country that the user belongs to or is accessing the site from.</display>
                        <value>customer_country</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">Geography or region that the user belongs to.</display>
                        <value>customer_geo</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">Profile of the user.</display>
                        <value>customer_profile</value>
                    </value-definition>
                </value-definitions>
            </attribute-definition>
            <attribute-definition attribute-id="blr_ContentSearchResponseFields">
                <display-name xml:lang="x-default">Search Response Fields</display-name>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
                <default-value>item_id,item_title,thumb_image,url,description</default-value>
            </attribute-definition>
        </custom-attribute-definitions>
        <group-definitions>
            <attribute-group group-id="Bloomreach">
                <display-name xml:lang="x-default">Bloomreach</display-name>
                <attribute attribute-id="blr_AccountID"/>
                <attribute attribute-id="blr_AuthKey"/>
                <attribute attribute-id="blr_DomainKey"/>
                <attribute attribute-id="blr_ContentDomainKey"/>
                <attribute attribute-id="blr_ApiKey"/>
                <attribute attribute-id="blr_MiltiLocaleEnabled"/>
                <attribute attribute-id="blr_MiltiCurrency"/>
                <attribute attribute-id="blr_ProductFields"/>
				<attribute attribute-id="blr_AdvancedContentExportFields"/>
            </attribute-group>
            <attribute-group group-id="BloomreachSearch">
                <display-name xml:lang="x-default">Bloomreach Search Settings</display-name>
                <attribute attribute-id="blr_SearchEnabled"/>
                <attribute attribute-id="blr_SearchResponseFields"/>
				<attribute attribute-id="blr_relevanceBySegmentType"/>
                <attribute attribute-id="blr_enableRelevanceBySegment"/>
                <attribute attribute-id="blr_returnProductIDsOnly"/>
                <attribute attribute-id="blr_ContentSearchResponseFields"/>
            </attribute-group>
        </group-definitions>
    </type-extension>
	
	<custom-type type-id="blm_FeedJobId">
        <staging-mode>no-staging</staging-mode>
        <storage-scope>organization</storage-scope>
        <key-definition attribute-id="id">
            <type>string</type>
            <min-length>0</min-length>
        </key-definition>
        <attribute-definitions>
            <attribute-definition attribute-id="jobId">
                <type>string</type>
                <localizable-flag>false</localizable-flag>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
        </attribute-definitions>
        <group-definitions>
            <attribute-group group-id="custom">
                <display-name xml:lang="x-default">custom</display-name>
                <attribute attribute-id="jobId"/>
            </attribute-group>
        </group-definitions>
    </custom-type>
</metadata>
