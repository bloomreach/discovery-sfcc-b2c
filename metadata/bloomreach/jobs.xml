<?xml version="1.0" encoding="UTF-8"?>
<jobs xmlns="http://www.demandware.com/xml/impex/jobs/2015-07-01">
    <job job-id="Bloomreach Product Feed" priority="0">
        <description>The job imports the all product catalog to the Bloomreach side</description>
        <parameters/>
        <flow>
            <context site-id="RefArch"/>
            <step step-id="Create Product feed file" type="custom.Bloomreach-Product-Feed-Export" enforce-restart="false">
                <description/>
                <parameters>
                    <parameter name="Enabled">true</parameter>
                    <parameter name="FeedType">FullFeed</parameter>
                </parameters>
            </step>
        </flow>
        <flow>
            <context site-id="RefArch"/>
            <step step-id="Upload feed to sftp" type="custom.Bloomreach-Upload" enforce-restart="false">
                <description/>
                <parameters>
                    <parameter name="Enabled">true</parameter>
                    <parameter name="FeedType">Product</parameter>
                </parameters>
            </step>
        </flow>
        <rules/>
        <triggers>
            <run-once enabled="false">
                <date>2023-08-03Z</date>
                <time>08:04:00.000Z</time>
            </run-once>
        </triggers>
    </job>

    <job job-id="Bloomreach Delta Product Feed" priority="0">
        <description>The job imports and update the changed product catalog to the Bloomreach side</description>
        <parameters/>
        <flow>
            <context site-id="RefArch"/>
            <step step-id="Create Product feed file" type="custom.Bloomreach-Product-Feed-Export" enforce-restart="false">
                <description/>
                <parameters>
                    <parameter name="Enabled">true</parameter>
                    <parameter name="FeedType">DeltaFeed</parameter>
                </parameters>
            </step>
        </flow>
        <flow>
            <context site-id="RefArch"/>
            <step step-id="Send feed to API" type="custom.Bloomreach-Send" enforce-restart="false">
                <description/>
                <parameters>
                    <parameter name="Enabled">true</parameter>
                    <parameter name="FeedType">Product</parameter>
                    <parameter name="UpdateType">PATCH</parameter>
                </parameters>
            </step>
        </flow>
        <rules/>
        <triggers>
            <run-once enabled="false">
                <date>2023-08-03Z</date>
                <time>08:04:00.000Z</time>
            </run-once>
        </triggers>
    </job>

    <job job-id="Bloomreach Publish Index" priority="0">
        <description>Create and publish new Bloomreach search index</description>
        <parameters/>
        <flow>
            <context site-id="RefArch"/>
            <step step-id="Bloomreach Publish Index" type="custom.Bloomreach-Index" enforce-restart="false">
                <description/>
                <parameters>
                    <parameter name="Enabled">true</parameter>
                    <parameter name="FeedType">Product</parameter>
                </parameters>
            </step>
        </flow>
        <rules/>
        <triggers>
            <run-once enabled="false">
                <date>2023-08-17Z</date>
                <time>13:11:00.000Z</time>
            </run-once>
        </triggers>
    </job>

    <job job-id="Bloomreach Publish Index - Content" priority="0">
        <description/>
        <parameters/>
        <flow>
            <context site-id="RefArch"/>
            <step step-id="Bloomreach Publish Index - Content" type="custom.Bloomreach-Index" enforce-restart="false">
                <description/>
                <parameters>
                    <parameter name="Enabled">true</parameter>
                    <parameter name="FeedType">Content</parameter>
                </parameters>
            </step>
        </flow>
        <rules/>
        <triggers>
            <run-recurring enabled="true">
                <recurrence>
                    <date-from>2023-09-11Z</date-from>
                    <start-time>18:00:00.000Z</start-time>
                    <interval>1h</interval>
                    <day-of-week>
                        <weekday>Saturday</weekday>
                        <weekday>Tuesday</weekday>
                        <weekday>Friday</weekday>
                        <weekday>Monday</weekday>
                        <weekday>Wednesday</weekday>
                        <weekday>Sunday</weekday>
                        <weekday>Thursday</weekday>
                    </day-of-week>
                </recurrence>
            </run-recurring>
        </triggers>
    </job>

    <job job-id="Bloomreach Content Feed" priority="0">
        <description/>
        <parameters/>
        <flow>
            <context site-id="RefArch"/>
            <step step-id="Bloomreach-Content-Feed-Export" type="custom.Bloomreach-Content-Feed-Export" enforce-restart="false">
                <description/>
                <parameters>
                    <parameter name="Enabled">true</parameter>
                </parameters>
            </step>
        </flow>
        <flow>
            <context site-id="RefArch"/>
            <step step-id="Bloomreach-Upload" type="custom.Bloomreach-Upload" enforce-restart="false">
                <description/>
                <parameters>
                    <parameter name="Enabled">true</parameter>
                    <parameter name="FeedType">Content</parameter>
                </parameters>
            </step>
        </flow>
        <rules/>
        <triggers>
            <run-once enabled="false">
                <date>2023-09-07Z</date>
                <time>21:25:00.000Z</time>
            </run-once>
        </triggers>
    </job>
</jobs>
